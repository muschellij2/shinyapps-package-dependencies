#!/bin/bash

set -x
set -e

OS_DISTRIBUTION=$(lsb_release -cs)

# need for add-apt-repository
sudo apt-get install -y software-properties-common

# check for supported platform (whitelisted ubuntu versions)
if [ "$OS_DISTRIBUTION" == "trusty" ] || [ "$OS_DISTRIBUTION" == "xenial" ]; then
	add-apt-repository ppa:jonathonf/ffmpeg-4
fi

apt-get update -qq
apt-get install -y ffmpeg x264 x265
